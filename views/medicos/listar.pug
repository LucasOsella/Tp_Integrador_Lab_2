extends ../layout.pug

block contenido 
        h1 Listado de Medicos
        a(href="/medicos/create" class="btn btn-success") Crear Medico
        a(href="/medicos/especialidad" class="btn btn-success") Cargar Especialidad
        table(class="table")        
            thead 
                tr
                    th Id
                    th Nombre
                    th Apellido 
                    th Email 
                    th TelÃ©fono 
                    th Estado
                    th Especialidades
                    th Administrar
                        
            tbody 
                each medico in medicos 
                    tr  
                        td= medico.id_medico
                        td= medico.nombre
                        td= medico.apellido 
                        td= medico.mail 
                        td= medico.telefono  
                        td= (medico.estado == 1) ? 'Activo' : 'Inactivo'
                        td 
                            if medico.especialidades.length > 0
                                each especialidad, index in medico.especialidades
                                    | #{especialidad}#{index !== medico.especialidades.length - 1 ? ', ' : ''}
                            else
                                | No tiene especialidades
                        td            
                            a(href=`/medicos/editar/${medico.id_medico}` class="btn btn-info") Editar
                            a(href=`/medicos/horarios/${medico.id_medico}` class="btn btn-info") Horarios

