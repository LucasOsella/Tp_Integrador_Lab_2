extends ../layout.pug
block contenido 
    a(href="/medicos/create" class ="btn btn-success") Crear Medico
    table(class= "table")
        thead 
            tr
                th Id
                th Nombre
                th Apellido 
                th e-mail 
                th Telefono 
                th Estado
                th Administar
        tbody 
            each medico in medicos 
                tr  
                    td= medico.id_medico
                    td= medico.nombre
                    td=  medico.apellido 
                    td=  medico.mail 
                    td=  medico.telefono 
                    td=  (medico.estado == 1)? 'Activo':'Inactivo'
                    td            
                        a(href=`/medicos/editar/${medico.id_medico}` class="btn btn-info") Editar
                        a(href="/medicos/editar" class="btn btn-danger") Borrar 