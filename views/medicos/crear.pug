extends ../layout.pug
block contenido 
    div(class= "container") 
        form(action="/medicos/crear" method="post") 
            input(name="nombre", type="text",placeholder="Ingrese Nombre")
            br
            input(name="apellido",type="texto",placeholder="Ingrese Apellido")
            br
            input(type="text", name="dni",placeholder="Ingrese DNI")
            br
            input(type="text",name="mail",placeholder="Ingrese E-mail")
            br
            input(type="text",name="telefono",placeholder="Ingrese Telefono")
            br         
            input(type="checkbox", name="estado", id="checkbox1")
            label(for="checkbox1") Estado 
            br
            input(type="date", name="fecha")
            br
            select(name="opcionM", id="opcion", placeholder="Medicos")
                each especialidad in especialidades 
                    option(value=especialidad.nombre) #{especialidad.nombre} 
            br          
            input(type="submit", value="Agregar" class= "btn btn-success")
        
        